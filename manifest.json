{
  "manifest_version": 2,
  "name": "Chrome Todo App",
  "short_name": "chrome-todo-app",
  "description": "A simple todo app.",
  "version": "0.0.1",
  "minimum_chrome_version": "38",

  "icons": {
    "16": "images/icon_16.png",
    "128": "images/icon_128.png"
  },

  "app": {
    "background": {
      "scripts": ["js/background.js"]
    }
  },

  "permissions": ["storage"]
}
